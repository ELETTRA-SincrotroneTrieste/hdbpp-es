JAVAC = javac -classpath ..:$(CLASSPATH)

# -----------------------------------------------------------------
#
#		The compiler flags
#
#------------------------------------------------------------------

JAVAFLAGS = -g

#-------------------------------------------------------------------


CLASS	=	ArchivingWatcher
CL_LIST =	$(CLASS).class\
		$(CLASS)Class.class	\
		ResetClass.class	\
		StartClass.class	\
		StopClass.class	\
		GetReportCurrentClass.class	\
		GetReportLatestErrorClass.class	\
		IsAttributeCorrectlyArchivedCurrentClass.class	\
		IsAttributeCorrectlyArchivedLatestErrorClass.class	\
		GetErrorArchiversCurrentClass.class	\
		GetErrorArchiversLatestErrorClass.class	\
		GetErrorsForArchiverCurrentClass.class	\
		GetErrorsForArchiverCurrentClass.class	\
		GetErrorDomainsCurrentClass.class	\
		GetErrorDomainsLatestErrorClass.class	\
		GetErrorsForDomainCurrentClass.class	\
		GetErrorsForDomainLatestErrorClass.class	\
		GetErrorsForAttributeCurrentClass.class	\
		GetErrorsForAttributeLatestErrorClass.class


PACKAGE = $(CLASS)


#
# Rule for compiling
#

.SUFFIXES:	.class .java
.java.class:
	$(JAVAC) $(JAVAFLAGS) $<

#-----------------------------------------------------------------


all:	$(PACKAGE)

$(PACKAGE): 	$(CL_LIST)


#-----------------------------------------------------------------
PACK_HOME = ..

jar:	$(PACKAGE)
	cd $(PACK_HOME); jar cvf		\
		$(PACKAGE)/$(PACKAGE).jar 	\
		$(PACKAGE)/*.class
	ls -l $(PACKAGE).jar 

#-----------------------------------------------------------------
doc:
	javadoc -d doc				\
	-windowtitle $(CLASS)		\
	-private 					\
	-version -author			\
	-nodeprecated				\
	-header "$(CLASS) Class"	\
	*.java

#-----------------------------------------------------------------

clean:
	rm -f *.class
