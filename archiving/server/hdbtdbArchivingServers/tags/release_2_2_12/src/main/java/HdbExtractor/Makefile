all:	$(PACKAGE)

$(PACKAGE): 	$(CL_LIST)


#-----------------------------------------------------------------
PACK_HOME = ..

jar:	$(PACKAGE)
	cd $(PACK_HOME); jar cvf		\
		$(PACKAGE)/$(PACKAGE).jar 	\
		$(PACKAGE)/*.class
	ls -l $(PACKAGE).jar 

#-----------------------------------------------------------------
